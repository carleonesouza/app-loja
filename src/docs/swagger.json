    "servers": [
        {
            "url": "http://localhost:4000/v1/api"
        }
    ],
    "host": "controlecaixa.swagger.io",
    "basePath": "/v1",
    "tags": [
        {
            "name": "controle de caixa",
            "description": "Rotas API gestão controle de caixa",
            "externalDocs": {
                "description": "Operações de controle de caixa",
                "url": "http://swagger.io"
            }
        },
        {
            "name": "loja",
            "description": "Rotas API gestão da loja",
            "externalDocs": {
                "description": "Operações da loja",
                "url": "http://swagger.io"
            }
        },
        {
            "name": "usuario",
            "description": "Rotas API gestão de usuários",
            "externalDocs": {
                "description": "Operações do usuários",
                "url": "http://swagger.io"
            }
        }
    ],
    "schemes": [
        "https",
        "http"
    ],
    "paths": {
        "/products": {
            "post": {
                "tags": [
                    "loja"
                ],
                "summary": "cadastra um produto novo",
                "description": "Essa rota será responsável por cadastrar um novo produto",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            },
                            "examples": {
                                "product": {
                                    "value": {
                                        "_id": "6408d68ba95c3183f872fe23",
                                        "name": "Cerveja Devassa",
                                        "description": "Ceverja Lata",
                                        "price": 8,
                                        "classification": "ML",
                                        "category": "6408c5fca1bb1f33b014dee2",
                                        "volume": "350",
                                        "quantity": 100,
                                        "status": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Sem Autorização para acesso!"
                    },
                    "400": {
                        "description": "Produto já existe!"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "loja"
                ],
                "summary": "Devolve uma lista de produtos",
                "description": "Essa rota será responsável devolver uma lista de produtos",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type":"array",
                                "items":{
                                    "$ref": "#/components/schemas/Product"
                                }
                                
                            },
                            "examples": {
                                "product": {
                                    "value": [
                                        {
                                            "_id": "6408d68ba95c3183f872fe23",
                                            "name": "Cerveja Devassa",
                                            "description": "Ceverja Lata",
                                            "price": 8,
                                            "classification": "ML",
                                            "category": "6408c5fca1bb1f33b014dee2",
                                            "volume": "350",
                                            "quantity": 100,
                                            "status": true,
                                            "__v": 0
                                        },
                                        {
                                            "_id": "6408dd63b76bc4618c8c09fc",
                                            "name": "Cerveja Heineken",
                                            "description": "Ceverja Lata",
                                            "price": 10,
                                            "classification": "ML",
                                            "category": "6408c5fca1bb1f33b014dee2",
                                            "volume": "350",
                                            "quantity": 100,
                                            "status": true,
                                            "__v": 0
                                        }
                                    ]
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Sem Autorização para acesso!"
                    },
                    "404": {
                        "description": "Não Encontrado!"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/products/{id}": {
            "get": {
                "tags": [
                    "loja"
                ],
                "parameters": {
                    "name": "id",
                    "in": "query",
                    "description": "ID do produto",
                    "required": true
                },
                "summary": "Devolve um produto específico",
                "description": "Essa rota será responsável por devolver um produto pelo seu ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            },
                            "examples": {
                                "product": {
                                    "value": {
                                        "_id": "6408d68ba95c3183f872fe23",
                                        "name": "Cerveja Devassa",
                                        "description": "Ceverja Lata",
                                        "price": 8,
                                        "classification": "ML",
                                        "category": "6408c5fca1bb1f33b014dee2",
                                        "volume": "350",
                                        "quantity": 100,
                                        "status": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Sem Autorização para acesso!"
                    },
                    "404": {
                        "description": "Não Encontrado!"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }
            },
            "put":{
                "tags": [
                    "loja"
                ],
                "parameters": [
                    {
                      "name": "id",
                      "in": "query",
                      "description": "ID do produto",
                      "required": true,
                      "type": "integer",
                      "format": "int64"
                    }
                  ],
                "summary": "Atualiza um produto específico",
                "description": "Essa rota será responsável por atualizar um produto pelo seu ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            },
                            "examples": {
                                "product": {
                                    "value": {
                                        "_id": "6408d68ba95c3183f872fe23",
                                        "name": "Cerveja Devassa",
                                        "description": "Ceverja Lata",
                                        "price": 8,
                                        "classification": "ML",
                                        "category": "6408c5fca1bb1f33b014dee2",
                                        "volume": "350",
                                        "quantity": 100,
                                        "status": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Sem Autorização para acesso!"
                    },
                    "404": {
                        "description": "Não Encontrado!"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    }
                }

            },
            "delete":{
                "tags": [
                    "loja"
                ],
                "parameters": [
                    {
                      "name": "id",
                      "in": "query",
                      "description": "ID do produto",
                      "required": true,
                      "type": "integer",
                      "format": "int64"
                    }
                  ],
                "summary": "Delata um produto específico",
                "description": "Essa rota será responsável por deletar um produto pelo seu ID",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
               
                "responses": {
                    "401": {
                        "description": "Sem Autorização para acesso!"
                    },
                    "404": {
                        "description": "Não Encontrado!"
                    },
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "category": {
                        "$ref": "#/components/schemas/Category"
                    },
                    "quantity": {
                        "type": "number"
                    },
                    "value": {
                        "type": "number"
                    },
                    "classification": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    },
                    "volume": {
                        "type": "number"
                    }
                }
            },
            "Category": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "status": {
                        "type": "boolean"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "Bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}